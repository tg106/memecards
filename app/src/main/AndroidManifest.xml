<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memecards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.presentation.ModeSelectPopup"
            android:theme="@style/AppTheme.PopMe"/>
        <activity
            android:name="com.example.presentation.PopUpEndGameActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name="com.example.presentation.LibraryPopupCardActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name="com.example.presentation.PopupCardActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name="com.example.presentation.StartGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.presentation.CardLibraryActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.presentation.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>