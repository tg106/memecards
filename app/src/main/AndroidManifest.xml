<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memecards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ModeSelectPopup"
            android:theme="@style/AppTheme.PopMe"/>
        <activity
            android:name=".PopUpEndGameActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name=".CardInformationActivity"
            android:label="@string/title_activity_card_information"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PopupCardActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name=".StartGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CardLibraryActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>