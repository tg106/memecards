    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/border_test">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/pepega_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="YOU"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/score_for_Human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="0"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:background="@drawable/border_test">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ai_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="AI PLAYER"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/score_for_AI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="0"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/border_test">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Tired of losing to AI"
            android:gravity="center" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="How about joining League of Loser in"
            android:gravity="center" />

        <Button
            android:id="@+id/ragequit_btn"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="r/QUIT"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/final_board"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/human_cardfield"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/border_test"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cardfield_name_1"
                    android:layout_width="145dp"
                    android:layout_height="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/cardfield_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_test"
                    android:textStyle="bold"
                    android:padding="2sp"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/cardfield_img_1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>
                <ProgressBar
                    android:id="@+id/cardfield_progressBar_1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ImageView
                    android:id="@+id/cardfield_upvote_img_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"/>
                <TextView
                    android:id="@+id/cardfield_text_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ai_cardfield"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="@drawable/border_test"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
